<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color3"
    android:orientation="vertical"

    tools:context="MainActivity2">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Color1"
        android:padding="5sp"
        android:text="Faça seu pedido"
        android:textAlignment="center"
        android:textColor="@color/Color2"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSubtituloNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:text="Digite seu nome:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textSubtituloCardapio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:text="Cardápio"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:text="Escolha seu lanche:"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layerLanche1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLanche1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/hamburguer" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textNomeLanche1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Burguer"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textDescricaoLanche1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Um clássico irresistível com pão macio, carne grelhada no ponto certo, queijo derretido e acompanhamentos frescos que juntos formam uma explosão de sabor."
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textPrecoLanche1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="R$20,00"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <Button
                    android:id="@+id/btnSetLanche1"
                    android:layout_width="wrap_content"
                    android:layout_height="48sp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/Color1"
                    android:text="selecionar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layerLanche2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLanche2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/burrito" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textNomeLanche2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Burrito"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textDescricaoLanche2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Envolto em uma tortilla quente, o burrito combina carne bem temperada, arroz, feijão, queijo e vegetais em uma mistura saborosa e marcante.  "
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textPrecoLanche2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="R$17,00"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSetLanche2"
                    android:layout_width="wrap_content"
                    android:layout_height="48sp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/Color1"
                    android:text="selecionar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layerLanche3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLanche3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/hotdog" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textNomeLanche3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hot Dog"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textDescricaoLanche3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uma combinação simples e deliciosa: pão fofinho, salsicha suculenta e uma variedade de molhos e acompanhamentos que tornam cada mordida única.         "
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textPrecoLanche3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="R$19,00"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSetLanche3"
                    android:layout_width="wrap_content"
                    android:layout_height="48sp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/Color1"
                    android:text="selecionar" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layerLanche4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLanche4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"

                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/pizza" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textNomeLanche4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pizza"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textDescricaoLanche4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Massa crocante por fora e macia por dentro, coberta com molho de tomate temperado, queijo derretido e uma variedade de recheios que agradam todos os paladares.  "
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textPrecoLanche4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="R$30,00"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSetLanche4"
                    android:layout_width="wrap_content"
                    android:layout_height="48sp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/Color1"
                    android:text="selecionar" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSet"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_margin="15dp"
        android:layout_weight="0"
        android:backgroundTint="@color/Color1"
        android:text="Confirmar"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>